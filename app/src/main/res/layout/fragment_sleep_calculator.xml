<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ultimatumedia.erik.taskmanager.SleepCalculatorFragment">

    <TextView
        android:id="@+id/TimeToGoToSleep"
        android:text="@string/temp_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/time_to_sleep_text_size" />

    <Button
        android:id="@+id/HoursNeededToSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_time"
        android:layout_below="@+id/TimeNeededToWakeUp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/TimeNeededToWakeUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_time"
        android:layout_below="@+id/TimeToGoToSleep"
        android:layout_alignLeft="@+id/HoursNeededToSleep"
        android:layout_alignStart="@+id/HoursNeededToSleep" />

</RelativeLayout>
